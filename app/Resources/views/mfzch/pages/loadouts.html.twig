<div data-role="page" id="loadouts">
 	<div data-role="header" data-position="fixed" data-tap-toggle="false">
		<h1>Frame Loadouts</h1>
		<a href="#nav-panel" class="ui-btn-left ui-btn ui-corner-all ui-btn-icon-notext ui-icon-bars">Navigation</a>
	</div>
 	<div role="main" class="ui-content">
		<h2>Custom Loadouts</h2>
		<div id="loadouts-custom"></div>

		<div id="loadouts-preset"></div>
	</div>

	<div data-role="popup" id="loadout-framegraph" data-overlay-theme="b" data-theme="b" data-transition="pop" data-history="false">
		<div data-role="header">
			<h1>Loadout Graph</h1>
		</div>

		<div role="main" class="ui-content">
			<h2 id="loadout-frameinfo-name"></h2>

			<div id="loadout-frameinfo-graph" class="ui-body ui-body-a ui-corner-all">No Data</div>

			<p><a href="#" data-rel="back" class="ui-btn ui-corner-all">Back</a></p>
		</div>
	</div>

	<div data-role="popup" id="loadout-add-to-company" data-overlay-theme="b" data-theme="b" data-transition="pop" data-history="false">
		<div data-role="header">
			<h1>Add to Company</h1>
		</div>

		<div role="main" class="ui-content">
			<p>Select Company</p>

			<ul id="lo-company-list" data-role="listview" data-inset="true" data-theme="a"></ul>

			<p><a href="#" data-rel="back" class="ui-btn ui-corner-all">Back</a></p>

			<div id="lo-data" style="display: none">-</div>
		</div>
	</div>

	<div data-role="popup" id="loadout-adjust" data-overlay-theme="b" data-theme="b" data-transition="pop" data-history="false">
		<div data-role="header">
			<h1>Edit Loadout</h1>
		</div>

		<div role="main" class="ui-content">
			<form id="loadout-form">
				<input name="loadout-id" id="loadout-id" type="hidden">

				<div id="loadout-adjust-info">
					<label for="loadout-name" class="hide-if-compact-ui">Frame Name:</label>
					<input name="loadout-name" id="loadout-name" type="text" />
				</div>

				<div class="addbox">
					<p class="hide-if-compact-ui">Add Systems</p>
					<p class="shrink-if-compact-ui"><a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="rh">Rh</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="rd">Rd</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="ra">Ra</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="b">B</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="y">Y</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="g">G</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="ssr">SSR</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="rhd" data-sys-split="true">Rh/d</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="rha" data-sys-split="true">Rh/a</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="rda" data-sys-split="true">Rd/a</a>
						<a href="#" class="add-sys ui-btn ui-btn-inline ui-corner-all" data-sys-type="e">E</a>
						<a href="#" class="reset-sys ui-btn ui-btn-a ui-btn-inline ui-corner-all">Reset</a></p>
				</div>
				<div class="sysbox">
					<p class="hide-if-compact-ui">Current Systems <small>(tap to remove)</small></p>
					<div id="loadout-systems"></div>
				</div>
			</form>

			<div id="loadout-adjust-submit">
				<button id="loadout-submit" class="ui-btn ui-btn-a ui-corner-all ui-btn-inline">Done</button>
				<button id="loadout-graphtoggle" class="ui-btn ui-corner-all ui-btn-inline">Toggle Graph</button>
				<button id="loadout-add-to-company-btn" class="ui-btn ui-corner-all ui-btn-inline">Add to Company</button>
			</div>

			<div id="loadout-graph" class="ui-body ui-body-a ui-corner-all"></div>
		</div>
	</div>

</div>
