function appStateModel() {
	{% if is_granted('IS_AUTHENTICATED_FULLY')
		and "now"|date('Y-m-d') < msgphp_user.user.elite_expires|date('Y-m-d') %}

		this.isElite = true;
		this.eliteExpires = '{{ msgphp_user.user.elite_expires|date("Y-m-d H:i:s") }}';
	{% else %}
		this.isElite = false;
		this.eliteExpires = 0;
	{% endif %}

	this.remote = {
		refresh: 8000,
		{% if remotegame is defined
			and remotegame %}
			mode: true,
			connection: true,
			id: '{{ gameid }}',
			password: '',
			granted: false
		{% else %}
			mode: false,
			connection: false,
			id: false,
			password: false,
			granted: false
		{% endif %}
	};
};
