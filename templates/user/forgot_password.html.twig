{% extends 'main.html.twig' %}

{% block htmlhead %}
<link rel="stylesheet" href="{{ asset('leaflet/leaflet.css') }}" />
<script src="{{ asset('leaflet/leaflet.js') }}"></script>

<script>
{{ include('mfzch/scripts/generics.js.twig') }}
</script>
{% endblock %}

{% block main %}
<script>
if (typeof jQuery != 'undefined') {
	// enable block-level ajax disable
	$.mobile.ajaxEnabled = false;
}
</script>
<div data-role="page" id="forgot-password">
	<div data-role="header" data-position="fixed" data-tap-toggle="false">
		<h1>Forgot Password</h1>
		<a href="#nav-panel" class="ui-btn-left ui-btn ui-corner-all ui-btn-icon-notext ui-icon-bars">Navigation</a>
	</div>
	<div role="main" class="ui-content">
		{{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_row(form.email) }}

			<div>
				<input type="submit" value="Request a password" />
			</div>
		{{ form_end(form) }}
	</div>
</div>
{% endblock %}
